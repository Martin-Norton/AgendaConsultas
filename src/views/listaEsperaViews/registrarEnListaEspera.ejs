<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Registrar en Lista de Espera</title>
</head>
<body>
    <h1>Registrar en Lista de Espera</h1>
    <% let paciente = null; %>
    <% let dniPaciente = null; %>
    <!-- Formulario para buscar al paciente por DNI -->
    <form action="/listaEspera/buscar" method="POST">
        <label for="dniPaciente">DNI del Paciente:</label>
        <input type="text" name="dniPaciente" required>
        <button type="submit">Buscar Paciente</button>
    </form>

    <% if (paciente) { %>
        <!-- Formulario para registrar al paciente en la lista de espera -->
        <form action="/listaEspera/agregar/<%= agendasProfesionales[0].ID_Agenda %>" method="POST">
            <input type="hidden" name="ID_Paciente" value="<%= paciente.ID_Paciente %>">

            <label for="Nombre_Paciente">Nombre:</label>
            <input type="text" value="<%= paciente.Nombre_Paciente %>" disabled>

            <label for="Apellido_Paciente">Apellido:</label>
            <input type="text" value="<%= paciente.Apellido_Paciente %>" disabled>

            <label for="Motivo_Consulta">Motivo de Consulta:</label>
            <input type="text" name="motivoConsulta" required>

            <button type="submit">Agregar a Lista de Espera</button>
        </form>
    <% } %>
</body>
</html>
