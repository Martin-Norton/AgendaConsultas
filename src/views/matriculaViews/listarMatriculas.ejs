<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Listar Matrículas</title>
    <style>
        :root {
            --primary-color: #1e90ff; /* Azul */
            --secondary-color: #87ceeb; /* Celeste */
            --background-color: #f0f8ff; /* Fondo claro */
            --input-bg: #fff; /* Fondo de inputs */
            --input-border: #1e90ff; /* Borde de inputs */
            --button-bg: #1e90ff; /* Fondo de botones */
            --button-hover-bg: #104e8b; /* Fondo de botones al hover */
            --label-color: #333; /* Color de las etiquetas */
            --text-color: #333; /* Color de texto */
        }

        /* Estilos globales */
        body {
            font-family: Arial, sans-serif;
            background-color: var(--background-color);
            margin: 0;
            padding: 20px; /* Espacio alrededor del contenido */
            color: var(--text-color);
            text-align: center; /* Centrar el texto */
        }

        /* Estilo de encabezados */
        h1, h2 {
            color: var(--primary-color);
        }

        /* Estilo del formulario */
        form {
            background-color: var(--background-color);
            padding: 20px;
            margin: 20px auto;
            width: 50%;
            border: 2px solid var(--primary-color);
            border-radius: 10px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            color: var(--label-color);
        }

        select {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border: 1px solid var(--input-border);
            border-radius: 5px;
            background-color: var(--input-bg);
            font-size: 1em;
            box-sizing: border-box;
            margin-bottom: 15px; /* Separación entre campos */
        }

        button {
            background-color: var(--button-bg);
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: var(--button-hover-bg);
        }

        /* Estilo de la tabla */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            border: 2px solid var(--primary-color);
        }

        th, td {
            border: 1px solid var(--primary-color);
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: var(--secondary-color);
        }

        /* Estilo de enlaces */
        a {
            color: var(--primary-color);
            text-decoration: none;
            margin: 10px;
            padding: 5px;
            border: 1px solid var(--primary-color);
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
            display: inline-block; /* Para que el margen funcione */
        }

        a:hover {
            background-color: var(--button-bg);
            color: white; /* Texto blanco al hover */
        }
    </style>
</head>
<body>
    <h1>Listar Matrículas</h1>

    <!-- Formulario para filtrar por profesional y especialidad -->
    <form action="/matriculas" method="GET">
        <label for="profesional">Seleccionar Profesional:</label>
        <select name="profesionalId" id="profesional">
            <option value="">Todos</option>
            <% profesionales.forEach(profesional => { %>
                <option value="<%= profesional.ID_Profesional %>" <%= profesionalId == profesional.ID_Profesional ? 'selected' : '' %>><%= profesional.Apellido_Profesional %></option>
            <% }) %>
        </select>

        <label for="especialidad">Seleccionar Especialidad:</label>
        <select name="especialidadId" id="especialidad">
            <option value="">Todas</option>
            <% especialidades.forEach(especialidad => { %>
                <option value="<%= especialidad.ID_Especialidad %>" <%= especialidadId == especialidad.ID_Especialidad ? 'selected' : '' %>><%= especialidad.Nombre_Especialidad %></option>
            <% }) %>
        </select>

        <button type="submit">Filtrar</button>
    </form>

    <!-- Mostrar matrículas filtradas -->
    <h2>Matrículas Activas</h2>
    <table>
        <thead>
            <tr>
                <th>Número de Matrícula</th>
                <th>Profesional</th>
                <th>Especialidad</th>
            </tr>
        </thead>
        <tbody>
            <% if (matriculas.length > 0) { %>
                <% matriculas.forEach(matricula => { %>
                    <tr>
                        <td><%= matricula.Numero_Matricula %></td>
                        <td><%= matricula.Apellido_Profesional %></td>
                        <td><%= matricula.Nombre_Especialidad %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="3">No se encontraron matrículas activas para los filtros seleccionados.</td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <a href="/matricula/agregar">Agregar nueva matrícula</a>
    <a href="/">Volver al inicio</a>
</body>
</html>
