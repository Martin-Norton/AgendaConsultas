<h2>Turnos Disponibles</h2>
<form action="/turno/mover" method="POST">
    <input type="hidden" name="ID_Turno_Original" value="<%= turnoSeleccionado.ID_Turno %>">
    <table>
        <tr>
            <th>Seleccionar</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Motivo</th>
        </tr>
        <% turnosDisponibles.forEach(turno => { %>
            <tr>
                <td>
                    <input type="radio" name="ID_Turno_Nuevo" value="<%= turno.ID_Turno %>" required>
                </td>
                <td><%= turno.Fecha_Turno %></td>
                <td><%= turno.Hora_Inicio_Turno %></td>
                <td><%= turno.Motivo_Consulta %></td>
            </tr>
        <% }) %>
    </table>
    <button type="submit">Mover aqu√≠</button>
</form>
