<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Turnos A Confirmar</title>
</head>
<body>
    <h1>Lista de Turnos A Confirmar</h1>

    <form method="POST" action="/turno/aConfirmar/filtros">
        <label for="profesional">Profesional:</label>
        <select name="profesional">
            <option value="">Seleccione un profesional</option>
            <% profesionales.forEach(prof => { %>
                <option value="<%= prof.ID_Profesional %>" <%= filtros.profesional == prof.ID_Profesional ? 'selected' : '' %>><%= prof.Nombre_Profesional %></option>
            <% }) %>
        </select>

        <label for="fechaInicio">Fecha de Inicio:</label>
        <input type="date" name="fechaInicio" value="<%= filtros.fechaInicio || '' %>">

        <label for="fechaFin">Fecha de Fin:</label>
        <input type="date" name="fechaFin" value="<%= filtros.fechaFin || '' %>">

        <button type="submit">Filtrar</button>
    </form>

    <table>
        <thead>
            <tr>
                <th>Nombre Paciente</th>
                <th>DNI</th>
                <th>Motivo de Consulta</th>
                <th>Obra Social</th>
                <th>Clasificaci√≥n</th>
                <th>Email</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% turnos.forEach(turno => { %>
                <tr>
                    <td><%= turno.Nombre_Paciente %></td>
                    <td><%= turno.Dni_Paciente %></td>
                    <td><%= turno.Motivo_Consulta %></td>
                    <td><%= turno.Obra_Social %></td>
                    <td><%= turno.Clasificacion %></td>
                    <td><%= turno.Email_Paciente %></td>
                    <td><%= turno.Estado %></td>
                    <td>
                        <a href="/turno/aConfirmar/editar/<%= turno.ID_Turno %>">Editar</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
