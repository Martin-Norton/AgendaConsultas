<!-- src/views/editProfesional.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Editar Profesional</title>
</head>
<body>
    <h1>Editar Profesional</h1>
    <form action="/profesionales/<%= profesional.id %>?_method=PUT" method="POST">
        <label for="nombre">Nombre:</label>
        <input type="text" name="nombre" value="<%= profesional.Nombre_Profesional %>" required>
        <br>

        <label for="apellido">Apellido:</label>
        <input type="text" name="apellido" value="<%= profesional.Apellido_Profesional %>" required>
        <br>

        <label for="telefono">Teléfono:</label>
        <input type="text" name="telefono" value="<%= profesional.Telefono %>" required>
        <br>

        <label for="email">Email:</label>
        <input type="email" name="email" value="<%= profesional.Email %>" required>
        <br>

        <label for="matricula">Matrícula:</label>
        <input type="text" name="matricula" value="<%= profesional.Matricula %>" required>
        <br>

        <label for="especialidad">Especialidad:</label>
        <input type="text" name="especialidad" value="<%= profesional.Especialidad %>" required>
        <br>

        <button type="submit">Actualizar Profesional</button>
    </form>

    <a href="/profesionales">Volver a la lista</a>
</body>
</html>
