<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Lista de Profesionales</title>
    <style>
        :root {
            --primary-color: #1e90ff; /* Azul */
            --secondary-color: #87ceeb; /* Celeste */
            --background-color: #e6f7ff; /* Fondo claro */
            --card-bg: #ffffff; /* Fondo blanco para las tarjetas */
            --card-border: #1e90ff; /* Borde de tarjetas */
            --button-bg: #1e90ff; /* Fondo de botones */
            --button-hover-bg: #104e8b; /* Fondo de botones al hover */
            --link-color: #1e90ff; /* Color de los enlaces */
            --text-color: #333; /* Color de texto */
        }

        /* Estilos globales */
        body {
            font-family: Arial, sans-serif;
            background-color: var(--background-color);
            margin: 0;
            padding: 20px; /* Añadir un poco de espacio alrededor */
            color: var(--text-color);
            text-align: center; /* Centrar el texto */
        }

        /* Estilo de encabezados */
        h1 {
            color: var(--primary-color);
            margin-bottom: 20px;
        }

        h2 {
            color: var(--secondary-color);
            margin-top: 20px;
        }

        /* Estilo de listas */
        ul {
            list-style-type: none; /* Sin viñetas */
            padding: 0; /* Sin padding */
        }

        /* Estilo para las tarjetas de profesionales */
        li {
            background-color: var(--card-bg); /* Fondo blanco */
            border: 2px solid var(--card-border); /* Borde de tarjetas */
            border-radius: 8px; /* Bordes redondeados */
            padding: 15px; /* Espaciado interno */
            margin: 15px 0; /* Espacio entre tarjetas */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Sombra para dar profundidad */
            transition: transform 0.3s; /* Transición para el efecto hover */
        }

        li:hover {
            transform: translateY(-5px); /* Efecto de elevación al pasar el mouse */
        }

        /* Espaciado entre texto y botones */
        li > a {
            display: inline-block; /* Para que el margen funcione */
            margin-top: 10px; /* Espacio entre el texto y los botones */
        }

        /* Estilo para los enlaces */
        a {
            color: var(--link-color);
            text-decoration: none;
            margin: 5px;
            padding: 5px 10px;
            border: 1px solid var(--link-color); /* Borde alrededor del enlace */
            border-radius: 5px; /* Bordes redondeados */
            transition: background-color 0.3s, color 0.3s;
        }

        a:hover {
            background-color: var(--button-bg);
            color: white; /* Texto blanco al hover */
        }

        /* Estilo para el botón de volver al inicio */
        .back-button {
            background-color: var(--button-bg);
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .back-button:hover {
            background-color: var(--button-hover-bg);
        }
    </style>
</head>
<body>
    <h1>Profesionales</h1>

    <!-- Opciones de CRUD -->
    <h2>Opciones</h2>
    <ul>
        <li><a href="/profesional/agregar">Agregar Profesional</a></li>
        <li><a href="/profesional">Listar Profesionales</a></li>
    </ul>

    <!-- Lista de Profesionales -->
    <h2>Lista de Profesionales</h2>
    <ul>
        <% profesionales.forEach(profesional => { %>
            <li>
                <strong>Nombre:</strong> <%= profesional.Nombre_Profesional %><br>
                <strong>Apellido:</strong> <%= profesional.Apellido_Profesional %><br>
                <strong>Teléfono:</strong> <%= profesional.Telefono %><br>
                <strong>Email:</strong> <%= profesional.Email %><br>
                <a href="/profesional/editar/<%= profesional.ID_Profesional %>">Editar</a>
                <a href="/profesional/baja/<%= profesional.ID_Profesional %>">Eliminar</a>
            </li>
        <% }); %>
    </ul>
    
    <button class="back-button" onclick="window.location.href='/'">Volver al inicio</button>
</body>
</html>
