<form action="/turno/editar/<%= turno.ID_Turno %>" method="POST">
    <div>
        <label for="Nombre_Paciente">Nombre del Paciente:</label>
        <input type="text" name="Nombre_Paciente" value="<%= turno.Nombre_Paciente %>" required>
    </div>

    <div>
        <label for="Dni_Paciente">DNI del Paciente:</label>
        <input type="text" name="Dni_Paciente" value="<%= turno.Dni_Paciente %>" required>
    </div>

    <div>
        <label for="Motivo_Consulta">Motivo de la Consulta:</label>
        <input type="text" name="Motivo_Consulta" value="<%= turno.Motivo_Consulta %>" required>
    </div>

    <div>
        <label for="Obra_Social">Obra Social:</label>
        <select name="Obra_Social" required>
            <% obrasSociales.forEach(obra => { %>
                <option value="<%= obra %>" <%= turno.Obra_Social === obra ? 'selected' : '' %>><%= obra %></option>
            <% }); %>
        </select>
    </div>

    <div>
        <label for="Clasificacion">Clasificaci√≥n:</label>
        <select name="Clasificacion" required>
            <% clasificaciones.forEach(clasificacion => { %>
                <option value="<%= clasificacion %>" <%= turno.Clasificacion === clasificacion ? 'selected' : '' %>><%= clasificacion %></option>
            <% }); %>
        </select>
    </div>

    <div>
        <label for="Email_Paciente">Email del Paciente:</label>
        <input type="email" name="Email_Paciente" value="<%= turno.Email_Paciente %>" required>
    </div>

    <div>
        <label for="Estado">Estado:</label>
        <select name="Estado" required>
            <% estados.forEach(estado => { %>
                <option value="<%= estado %>" <%= turno.Estado === estado ? 'selected' : '' %>><%= estado %></option>
            <% }); %>
        </select>
    </div>

    <button type="submit">Guardar cambios</button>
</form>
