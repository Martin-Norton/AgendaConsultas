<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agregar Turno</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Agregar Nuevo Turno</h1>
    <form id="filtros" action="/turno/disponibles" method="GET">
        <label for="profesional">Seleccionar Profesional:</label>
        <select name="profesional" id="profesional">
            <option value="">-- Seleccionar --</option>
            <% profesionales.forEach(profesional => { %>
                <option value="<%= profesional.ID_Profesional %>"><%= profesional.Nombre %> <%= profesional.Apellido %></option>
            <% }) %>
        </select>

        <label for="especialidad">Seleccionar Especialidad:</label>
        <select name="especialidad" id="especialidad">
            <option value="">-- Seleccionar --</option>
            <% especialidades.forEach(especialidad => { %>
                <option value="<%= especialidad.ID_Especialidad %>"><%= especialidad.Nombre %></option>
            <% }) %>
        </select>

        <button type="submit">Buscar Turnos Disponibles</button>
    </form>

    <div id="turnos-disponibles" style="margin-top: 20px;">
        <% if (turnos) { %>
            <h2>Turnos Disponibles</h2>
            <% turnos.forEach(turno => { %>
                <form action="/turno" method="POST">
                    <input type="hidden" name="ID_Agenda" value="<%= turno.ID_Agenda %>">
                    <input type="hidden" name="Hora_Inicio" value="<%= turno.Hora_Inicio %>">
                    <input type="hidden" name="Hora_Fin" value="<%= turno.Hora_Fin %>">
                    <button type="submit" <%= turno.ocupado ? 'disabled' : '' %>>|<%= turno.Hora_Inicio %> a <%= turno.Hora_Fin %>|</button>
                </form>
            <% }) %>
        <% } %>
    </div>
</body>
</html>
