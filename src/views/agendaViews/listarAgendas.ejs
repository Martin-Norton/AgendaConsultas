<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Agendas</title>
    <link rel="stylesheet" href="/css/agenda/listarAgenda.css">
    <link rel="icon" href="/img/consultorio.png" type="image/png">
</head>
<body>
    <h1>Listado de Agendas</h1>
    <a class="agregar" href="/agenda/agregar">Agregar nueva agenda</a>
    <table>
        <thead>
            <tr>
                <th>Profesional</th>
                <th>Especialidad</th>
                <th>Hora Inicio</th>
                <th>Hora Fin</th>
                <th>Duraci√≥n Cita</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% agendas.forEach(agenda => { %>
            <tr>
                <td><%= agenda.Nombre_Profesional %> <%= agenda.Apellido_Profesional %></td>
                <td><%= agenda.Nombre_Especialidad %></td>
                <td><%= agenda.Hora_Inicio %></td>
                <td><%= agenda.Hora_Fin %></td>
                <td><%= agenda.Duracion_Cita %> minutos</td>
                <td><%= agenda.Estado %></td>
                <td class="acciones">
                    <form action="/agenda/inactivar/<%= agenda.ID_Agenda %>" method="POST" style="display:inline;">
                        <a href="/agenda/editar/<%= agenda.ID_Agenda %>">Editar</a>
                        <button class="inactivar" type="submit">Inactivar</button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <a class="volver" href="/secretaria">Volver al inicio</a>
</body>
</html>